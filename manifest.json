{
  "manifest_version": 3,
  "name": "Website Time Manager",
  "version": "1.0.0",
  "description": "Manage and limit time spent on distracting websites",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "dist/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/index.js"],
      "css": ["dist/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Website Time Manager",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/blocked.html", "dist/styles.css", "dist/blocked.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 